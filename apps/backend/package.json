{
  "name": "@project-jarvis/backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "tsx watch ./src/index.ts",
    "start": "node ./dist/index.js",
    "build": "tsc -p tsconfig.json",
    "lint": "echo \"Add lint script\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node --env-file=.env --import=tsx src/infrastructure/db/migrate.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --env-file=.env"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/openai": "^1.3.22",
    "@hono/node-server": "^1.14.1",
    "@hono/zod-validator": "^0.4.3",
    "@project-jarvis/shared-types": "workspace:*",
    "ai": "^4.3.16",
    "bcrypt": "^6.0.0",
    "dotenv": "^17.2.4",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.7.10",
    "jsonwebtoken": "^9.0.3",
    "postgres": "^3.4.8",
    "uuid": "^13.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.2.1",
    "@types/pg": "^8.16.0",
    "@types/uuid": "^11.0.0",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3",
    "vitest": "^4.0.18"
  }
}
