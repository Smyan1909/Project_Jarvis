{
  "name": "@project-jarvis/backend",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "node --watch ./src/index.ts",
    "start": "node ./dist/index.js",
    "build": "tsc -p tsconfig.json",
    "lint": "echo \"Add lint script\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node --env-file=.env --import=tsx src/infrastructure/db/migrate.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --env-file=.env"
  },
  "dependencies": {
    "@project-jarvis/shared-types": "workspace:*",
    "drizzle-orm": "^0.45.1",
    "postgres": "^3.4.8",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.1",
    "@types/pg": "^8.16.0",
    "dotenv": "^17.2.4",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.6.3",
    "vitest": "^4.0.18"
  }
}